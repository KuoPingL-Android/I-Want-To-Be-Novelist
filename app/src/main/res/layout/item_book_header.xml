<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="book"
            type="studio.saladjam.iwanttobenovelist.repository.dataclass.Book" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        tools:background="#000">

        <TextView
            android:id="@+id/text_book_writer_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="16dp"
            android:text="@{book.category}"
            android:textColor="@android:color/white"
            android:textSize="@dimen/book_detail_category_size"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="科幻" />

        <TextView
            android:id="@+id/text_item_book_writer_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:maxLines="2"
            android:textColor="@color/iwbn_primary_color"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@id/text_book_writer_category"
            app:layout_constraintTop_toBottomOf="@id/text_book_writer_category"
            app:layout_constraintWidth_percent="0.6"
            tools:text="THE FAMOUS ESCAPE"
            android:text="@{book.title}"/>

        <TextView
            android:id="@+id/text_item_book_writer_summary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:lines="6"
            android:maxLines="6"
            android:textColor="@color/iwbn_primary_color"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@id/text_item_book_writer_title"
            app:layout_constraintTop_toBottomOf="@id/text_item_book_writer_title"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintWidth_percent="0.8"
            tools:text="This is the Summary of the Book"
            android:text="@{book.summary}"/>

        <ImageView
            android:id="@+id/image_item_book_writer_follow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/bookmark_icon"
            android:tint="@color/iwbn_primary_color"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@id/text_item_book_writer_summary"
            app:layout_constraintTop_toBottomOf="@id/text_item_book_writer_summary"
            android:layout_marginTop="8dp"/>
        <TextView
            android:id="@+id/text_item_book_writer_fav_count"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/image_item_book_writer_follow"
            app:layout_constraintBottom_toBottomOf="@id/image_item_book_writer_follow"
            app:layout_constraintStart_toEndOf="@id/image_item_book_writer_follow"
            android:layout_marginStart="8dp"

            tools:text="12345"
            android:textColor="@color/iwbn_primary_color"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>