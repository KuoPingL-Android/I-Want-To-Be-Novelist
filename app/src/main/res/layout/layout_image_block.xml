<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_purple">
        
        <ImageView
            android:id="@+id/image_image_block_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/image_image_block_close"
            app:layout_constraintBottom_toBottomOf="@id/image_image_block_expand"
            app:layout_constraintStart_toStartOf="@id/image_image_block_close"
            app:layout_constraintEnd_toEndOf="@id/image_image_block_expand"

            tools:src="@drawable/placeholder"
            />

        <ImageView
            android:id="@+id/image_image_block_close"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/close_icon" 
            android:clickable="true"
            android:background="@drawable/editor_image_block_buttons"/>
        
        <ImageView
            android:id="@+id/image_image_block_expand"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/expand_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/bg_round_corners_button"/>
        
        
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>