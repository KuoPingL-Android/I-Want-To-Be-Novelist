<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="studio.saladjam.iwanttobenovelist.editorscene.EditorViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button_editor_test1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:text="新增 editorText"
            android:onClick="@{()->viewModel.addEditText()}"/>
        <Button
            android:id="@+id/button_editor_test2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/button_editor_test1"
            android:text="新增圖片"
            android:onClick="@{()->viewModel.addNewImage()}"/>

        <studio.saladjam.iwanttobenovelist.editorscene.EditorBlock
            android:id="@+id/layout_editor_palette"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/button_editor_test2"
            app:layout_constraintBottom_toBottomOf="parent">

        </studio.saladjam.iwanttobenovelist.editorscene.EditorBlock>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>