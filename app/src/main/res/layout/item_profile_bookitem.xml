<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="book"
            type="studio.saladjam.iwanttobenovelist.repository.dataclass.Book" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_item_profile_book_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layer_inner_item_profile_book_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp">

                <ImageView
                    android:id="@+id/image_item_profile_booklist_cover"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintWidth_percent="0.4"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintDimensionRatio="3:4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/placeholder"
                    app:fireStorageImageUrl="@{book.cover}"/>
                <TextView
                    android:id="@+id/text_item_profile_booklist_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@{book.title}"
                    app:layout_constraintTop_toTopOf="@id/image_item_profile_booklist_cover"
                    app:layout_constraintBottom_toTopOf="@id/text_item_profile_booklist_author"
                    app:layout_constraintStart_toStartOf="@id/text_item_profile_booklist_author"
                    app:layout_constraintVertical_bias="1"
                    tools:text="TITLE"
                    android:textSize="25dp"/>
                <TextView
                    android:id="@+id/text_item_profile_booklist_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{book.authorName}"
                    app:layout_constraintTop_toTopOf="@id/image_item_profile_booklist_cover"
                    app:layout_constraintBottom_toBottomOf="@id/image_item_profile_booklist_cover"
                    app:layout_constraintStart_toEndOf="@id/image_item_profile_booklist_cover"
                    android:layout_marginStart="20dp"
                    tools:text="AUTHOR NAME"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="10dp"
                    tools:text="LAST SEEN DATE"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>