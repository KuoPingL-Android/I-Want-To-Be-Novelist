<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TitleText">
        <item name="android:fontFamily">@font/titlefont</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:background">@drawable/bg_text_title</item>
        <item name="android:textColor">@color/title_text_color</item>
        <item name="android:padding">1dp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="SubtitleText">
        <item name="android:fontFamily">@font/titlefont</item>
        <item name="android:textSize">@dimen/subtitle_text_size</item>
        <item name="android:background">@drawable/bg_text_title</item>
        <item name="android:textColor">@color/title_text_color</item>
        <item name="android:padding">1dp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="SubtitleText_LargerFont">
        <item name="android:fontFamily">@font/titlefont</item>
        <item name="android:textSize">@dimen/subtitle_text_size_larger</item>
        <item name="android:background">@drawable/bg_text_title</item>
        <item name="android:textColor">@color/title_text_color</item>
        <item name="android:padding">1dp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="TitleText_NoBorder">
        <item name="android:fontFamily">@font/titlefont</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/title_text_color</item>
        <item name="android:padding">1dp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="SubtitleText_NoBorder">
        <item name="android:fontFamily">@font/titlefont</item>
        <item name="android:textSize">@dimen/subtitle_text_size</item>
        <item name="android:textColor">@color/title_text_color</item>
        <item name="android:padding">1dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="MessageDialog">
        <item name="android:windowBackground">@color/translucent_80</item>
    </style>

    <style name="Login_Button">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/bg_round_corners_button</item>
    </style>

    <style name="CreateBookDialog">
        <item name="android:windowBackground">#66000000</item>
    </style>


</resources>
