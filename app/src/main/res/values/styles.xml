<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- ===== TEXTVIEW ===== -->
    <!-- HOME -->
    <style name="HomeItemTitleTextView">
        <item name="android:textColor">@color/title_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="HomeItemSeeAllTextView" parent="HomeItemTitleTextView">
        <item name="android:textSize"> 16dp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Divider">
        <item name="android:color">#8000</item>
    </style>

    <!-- LOGIN -->


    <style name="TitleText">
        <item name="android:fontFamily">@font/titlefont</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:background">@drawable/bg_text_title</item>
        <item name="android:textColor">@color/title_text_color</item>
        <item name="android:padding">1dp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="SubtitleText">
        <item name="android:fontFamily">@font/titlefont</item>
        <item name="android:textSize">@dimen/subtitle_text_size</item>
        <item name="android:background">@drawable/bg_text_title</item>
        <item name="android:textColor">@color/title_text_color</item>
        <item name="android:padding">1dp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="SubtitleText_LargerFont">
        <item name="android:fontFamily">@font/titlefont</item>
        <item name="android:textSize">@dimen/subtitle_text_size_larger</item>
        <item name="android:background">@drawable/bg_text_title</item>
        <item name="android:textColor">@color/title_text_color</item>
        <item name="android:padding">1dp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="TitleText_NoBorder">
        <item name="android:fontFamily">@font/titlefont</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/title_text_color</item>
        <item name="android:padding">1dp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="SubtitleText_NoBorder">
        <item name="android:fontFamily">@font/titlefont</item>
        <item name="android:textSize">@dimen/subtitle_text_size</item>
        <item name="android:textColor">@color/title_text_color</item>
        <item name="android:padding">1dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="MessageDialog">
        <item name="android:windowBackground">@color/translucent_80</item>
    </style>

    <style name="Login_Button">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/bg_round_corners_button</item>
    </style>

    <style name="CreateBookDialog">
        <item name="android:windowBackground">#66ffffff</item>
    </style>

    <style name="LoadingIndicator">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint">@color/iwbn_primary_color</item>
    </style>

    <style name="LoadingIndicatorText">
        <item name="android:textColor">@color/iwbn_primary_color</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="LoadingIndicatorContainer">

        <item name="android:background">@drawable/bg_dialog_book_creation</item>
        <item name="android:backgroundTint">#8000</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>

    </style>

    <style name="LoadingIndicatorParent">
        <item name="android:background">@color/loading_view</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="LoginDialog">
        <item name="android:windowBackground">#8888</item>
    </style>

    <style name="DialogText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/iwbn_primary_color</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="EditorMixer">
        <item name="android:paddingStart">76dp</item>
        <item name="android:paddingEnd">76dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

</resources>
